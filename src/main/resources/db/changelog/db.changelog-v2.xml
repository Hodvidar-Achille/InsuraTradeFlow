<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2" author="Achille Genet">
        <addColumn tableName="insurance_policies">
            <column name="created_by" type="varchar(255)" defaultValue="ADMIN">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <update tableName="insurance_policies">
            <column name="created_by" value="ADMIN"/>
            <where>created_by IS NULL</where>
        </update>
    </changeSet>

</databaseChangeLog>